<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
         https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <!-- Context Parameters for Database Configuration -->
    <context-param>
        <param-name>db.url</param-name>
        <param-value>jdbc:mysql://localhost:3306</param-value> <!-- Your project database -->
    </context-param>

    <context-param>
        <param-name>db.user</param-name>
        <param-value>systemapp</param-value> <!-- Your database username -->
    </context-param>

    <context-param>
        <param-name>db.password</param-name>
        <param-value>systemapp</param-value> <!-- Your database password -->
    </context-param>

    <!-- Servlet definition for AuthenticationServlet -->
    <servlet>
        <servlet-name>AuthenticationServlet</servlet-name>
        <servlet-class>AuthenticationServlet</servlet-class> <!-- Your AuthenticationServlet class -->
    </servlet>

    <!-- Servlet mapping for AuthenticationServlet -->
    <servlet-mapping>
        <servlet-name>AuthenticationServlet</servlet-name>
        <url-pattern>/AuthenticationServlet</url-pattern> <!-- The URL to access this servlet -->
    </servlet-mapping>

    <!-- Servlet definition for ExecuteSQLServlet -->
    <servlet>
        <servlet-name>ExecuteSQLServlet</servlet-name>
        <servlet-class>ExecuteSQLServlet</servlet-class> <!-- Your ExecuteSQLServlet class -->
    </servlet>

    <!-- Servlet mapping for ExecuteSQLServlet -->
    <servlet-mapping>
        <servlet-name>ExecuteSQLServlet</servlet-name>
        <url-pattern>/ExecuteSQLServlet</url-pattern> <!-- The URL to access this servlet -->
    </servlet-mapping>

</web-app>
